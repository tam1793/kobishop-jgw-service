<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
    
    <jdbc>
        <driver>com.mysql.jdbc.Driver</driver>
        <url>jdbc:mysql://127.0.0.1:3306/kobishop?serverTimezone=UTC</url>        
        <user>root</user>
        <password>admin</password>
    </jdbc>

    <generator>
        <database>
            <name>org.jooq.util.mysql.MySQLDatabase</name>
            <includes>.*</includes>
            <excludes></excludes>            
            <inputSchema>kobishop</inputSchema>
        </database>

        <target>      
            <packageName>kobishop</packageName>            
            <directory>db/</directory>
        </target>
    </generator>
   
</configuration>